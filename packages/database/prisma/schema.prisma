generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id          String   @id @default(uuid())
  title       String
  url         String   @unique
  source      String
  content     String   @db.Text
  publishedAt DateTime
  imageUrl    String?

  // Japanese translations
  titleJa     String?
  contentJa   String?  @db.Text

  // AI Analysis Data
  summary     String[]
  sentiment   Float?
  bias        String?
  impactLevel String   @default("C")
  glossary    Json?    // AI-generated glossary for unfamiliar terms/people

  // Embedding for semantic search (1536 dimensions for text-embedding-3-small)
  embedding   Unsupported("vector(1536)")?

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  tags       ArticleTag[]
  storylines StorylineArticle[]
  bookmarks  Bookmark[]

  @@index([publishedAt(sort: Desc)])
  @@index([source, publishedAt(sort: Desc)])
  @@index([impactLevel])
}

// Storyline - connects related events into a narrative
model Storyline {
  id            String   @id @default(uuid())
  title         String
  titleJa       String?
  description   String   @db.Text
  descriptionJa String?  @db.Text
  status        String   @default("ongoing") // "ongoing", "resolved", "developing"
  category      String? // "tariff", "legal", "election", "foreign_policy", etc.

  // AI-generated current state summary
  summary   String? @db.Text
  summaryJa String? @db.Text

  // Timeline metadata
  firstEventAt DateTime
  lastEventAt  DateTime
  eventCount   Int      @default(0)

  // Metadata
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  articles StorylineArticle[]

  @@index([status])
  @@index([lastEventAt(sort: Desc)])
  @@index([category])
}

// Junction table for Storyline-Article relationship
model StorylineArticle {
  storylineId String
  articleId   String
  addedAt     DateTime @default(now())
  isKeyEvent  Boolean  @default(false) // Marks major developments

  storyline Storyline @relation(fields: [storylineId], references: [id], onDelete: Cascade)
  article   Article   @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@id([storylineId, articleId])
  @@index([storylineId])
  @@index([articleId])
}

model Tag {
  id       String       @id @default(uuid())
  name     String       @unique
  articles ArticleTag[]

  @@index([name])
}

model ArticleTag {
  articleId String
  tagId     String
  article   Article @relation(fields: [articleId], references: [id], onDelete: Cascade)
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([articleId, tagId])
}

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  name             String?
  emailVerified    DateTime?
  image            String?
  pushSubscription Json?
  discordWebhook   String?
  language         String    @default("ja")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  alerts    Alert[]
  accounts  Account[]
  sessions  Session[]
  bookmarks Bookmark[]

  @@index([email])
}

// User bookmarks for articles
model Bookmark {
  id        String   @id @default(uuid())
  userId    String
  articleId String
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  article Article @relation(fields: [articleId], references: [id], onDelete: Cascade)

  @@unique([userId, articleId]) // Each user can bookmark an article only once
  @@index([userId])
  @@index([articleId])
  @@index([createdAt(sort: Desc)])
}

model Alert {
  id        String  @id @default(uuid())
  keyword   String
  minImpact String

  notifyPush    Boolean @default(false)
  notifyEmail   Boolean @default(false)
  notifyDiscord Boolean @default(false)

  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  notificationLogs NotificationLog[]

  @@index([userId])
  @@index([isActive])
}

// Notification history to prevent duplicate notifications
model NotificationLog {
  id        String   @id @default(uuid())
  alertId   String
  articleId String
  sentAt    DateTime @default(now())

  // Track which channels were notified
  sentPush    Boolean @default(false)
  sentEmail   Boolean @default(false)
  sentDiscord Boolean @default(false)

  alert Alert @relation(fields: [alertId], references: [id], onDelete: Cascade)

  @@unique([alertId, articleId]) // Prevent duplicate notifications for same alert+article
  @@index([alertId])
  @@index([articleId])
  @@index([sentAt(sort: Desc)])
}

model StockPrice {
  id        String   @id @default(uuid())
  symbol    String
  price     Float
  change    Float
  volume    BigInt
  timestamp DateTime
  createdAt DateTime @default(now())

  @@index([symbol, timestamp(sort: Desc)])
}

// NextAuth.js tables
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Executive Orders and Presidential Documents
model ExecutiveOrder {
  id                    String   @id @default(uuid())
  documentNumber        String   @unique // Federal Register document number
  executiveOrderNumber  Int?     // EO number (e.g., 14148)
  type                  String   // "executive_order", "proclamation", "memorandum"
  title                 String
  titleJa               String?
  abstract              String?  @db.Text // Original abstract from Federal Register
  summaryJa             String?  @db.Text // AI-generated Japanese summary
  signingDate           DateTime
  publicationDate       DateTime
  htmlUrl               String   // Link to Federal Register page
  pdfUrl                String?  // Link to PDF
  president             String   @default("donald-trump")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([type])
  @@index([signingDate(sort: Desc)])
  @@index([publicationDate(sort: Desc)])
}

// API Usage Tracking
model ApiUsage {
  id           String   @id @default(uuid())
  provider     String   // "openai", "anthropic", etc.
  model        String   // "gpt-4o-mini", "claude-3-haiku", etc.
  operation    String   // "translate", "summarize", "sentiment", "bias", "impact"
  inputTokens  Int
  outputTokens Int
  cost         Float    // Cost in USD
  articleId    String?
  createdAt    DateTime @default(now())

  @@index([provider])
  @@index([createdAt(sort: Desc)])
  @@index([operation])
}
