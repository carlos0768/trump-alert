{
    "description": "Auto-format, commit and push after code changes",
    "hooks": {
      "PostToolUse": [
        {
          "matcher": "Edit|Write",
          "hooks": [
            {
              "type": "command",
              "command": "${CLAUDE_PROJECT_DIR}/.claude/hooks/ts-check-and-push.sh",
              "timeout": 300,
              "blocking": true,
              "showOutput": true
            }
          ]
        }
      ]
    }
  }
  